<%= form_for @varience, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :varience, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :varience, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :desc, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :desc, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                variences_path, :class => 'btn' %>
  </div>
<% end %>
